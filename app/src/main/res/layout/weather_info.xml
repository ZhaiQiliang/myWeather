<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="45.0dip"
        android:background="#ffcd2626"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/title_city_manager"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:src="@drawable/title_city" />

        <ImageView
            android:id="@+id/title_seperator"
            android:layout_width="1.0dip"
            android:layout_height="40.0dip"
            android:layout_marginTop="2.0dip"
            android:layout_toRightOf="@id/title_city_manager"
            android:background="#A71717" />

        <ImageView
            android:id="@+id/title_update_btn"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:src="@drawable/title_update" />

        <ImageView
            android:id="@+id/title_share"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_toLeftOf="@id/title_update_btn"
            android:src="@drawable/title_share" />

        <ImageView
            android:id="@+id/title_location"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_toLeftOf="@id/title_share"
            android:src="@drawable/title_city" />

        <TextView
            android:id="@+id/title_city_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/title_location"
            android:layout_toRightOf="@id/title_seperator"
            android:gravity="center_vertical"
            android:paddingLeft="5dip"
            android:text="北京天气"
            android:textColor="#ffffffff"
            android:textSize="22.0sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/today_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45.0dip"
        android:background="@drawable/biz_plugin_weather_shenzhen_bg"
        android:orientation="vertical"
        android:padding="25.0dip">

        <LinearLayout
            android:id="@+id/today_body_line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/today_cit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京"
                    android:textColor="#ffffffff"
                    android:textSize="45.0sp" />

                <TextView
                    android:id="@+id/today_update_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:text="今天21:40发布"
                    android:textColor="#ffffffff"
                    android:textSize="23.0sp" />

                <TextView
                    android:id="@+id/today_shidu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:text="湿度:57%"
                    android:textColor="#ffffffff"
                    android:textSize="23.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/pm2.5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/today_major"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PM2.5"
                            android:textColor="#ffffffff"
                            android:textSize="15.0sp" />

                        <TextView
                            android:id="@+id/today_aqi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3.0dip"
                            android:text="250"
                            android:textColor="#ffffffff"
                            android:textSize="40.0sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="90.0dip">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5.0dip"
                            android:adjustViewBounds="true"
                            android:src="@drawable/biz_plugin_weather_0_50" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/today_quqlity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="45.0dip"
                    android:text="重度污染"
                    android:textColor="#ffffffff"
                    android:textSize="25.0dip" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="150.0dip"
                    android:layout_height="150.0dip"
                    android:adjustViewBounds="true"
                    android:src="@drawable/biz_plugin_weather_qing" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/today_smtwtfs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今天 星期一"
                    android:textColor="#ffffffff"
                    android:textSize="25.0sp" />

                <TextView
                    android:id="@+id/today_wendu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5ºC~-5ºC"
                    android:textColor="#ffffffff"
                    android:textSize="37.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="晴转多云"
                    android:textColor="#ffffffff"
                    android:textSize="25.0sp" />

                <TextView
                    android:id="@+id/today_feng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:text="微风"
                    android:textColor="#ffffffff"
                    android:textSize="25.0sp" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
